<!--index.wxml-->
<scroll-view scroll-x="true">
  <view class="list-wrap" scroll-x="true">
    <view class="list-img" wx:for="{{imgslist}}" wx:key="{{index}}">
      <image class="img-item" src="{{item.img}}"></image>
      <text class='text-color'>{{item.text}}</text>
    </view>
  </view>
</scroll-view>