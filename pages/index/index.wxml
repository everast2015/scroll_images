<!--index.wxml-->
<scroll-view scroll-x="true">
  <view class="imgWrap" scroll-x="true">
    <view class="img_Item" wx:for="{{imgslist}}" wx:key="{{index}}">
      <image class="img_Item_img" src="{{item.img}}"></image>
      <text class='text-color'>{{item.text}}</text>
    </view>
  </view>
</scroll-view>